<div class="container mt-4">
  <h1 class='main-title'>Thought Diary</h1>
  <br>
  <%= link_to "+ Add Journal Entry", new_diary_entry_path, class: "box-button" %>
  <br>
  <br>
  <h3 class="title">Past Journal Entries:</h3>
  <div class="container">
    <div class="row my-4 py-4">
      <% @diary_entries.each do |entry| %>
        <%= render 'diary_entry_card', entry: entry %>
      <% end %>
    </div>
  </div>
</div>
